/* pages/mine/mine.wxss */
page{
  background-color:#eee;
}
.title{
  background-color: #fff;
  width:100%;
  height:180rpx;
  padding:20rpx;
  display: flex;
  justify-content: space-between;
  align-items:center;
  margin-bottom:20rpx;
}
.title image{
  width:120rpx;
  height:120rpx;
  border-radius:50%;
  margin-right:50rpx;
}
.title .left>view:first-child{
  font-size:18px;
  font-weight: 500;
  margin-bottom:10rpx;
}

.li{
  background-color:#fff;
  padding:15rpx 20rpx; 
  margin-bottom:4rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.li view:first-child{
  display: flex;
}
.li view:first-child image{
  width:48rpx;
  height:56rpx;
  margin-right:16rpx;
}
.li view:first-child text{
  display: block;
  font-size:14px;
  margin-top:12rpx;
}

.zhao{
  background-color:#fff;
  margin-top:20rpx;
  padding:30rpx;
  text-align: center;
}
