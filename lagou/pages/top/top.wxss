/* pages/top/top.wxss */
.slider,.slider>swiper,swiper>swiper-item{width:100%;}
swiper-item image{width:100%;height:356rpx;}
.shang{
  background-color: #f1f1f1;
  display: flex;
  font-size:12px;
  padding:10rpx 0;
  justify-content:center;
}
.shang navigator{
  margin-left:10rpx;
  color:#2CDBCD;
  padding-bottom:2rpx;
  border-bottom:1px solid #2CDBCD;
}
/*排行列表*/
.topList{
  padding:20rpx;
  display: flex;
  justify-content: space-between;
  border: 1px solid #ddd;
}
.topList .left_img{
  display: flex;
}
.topList .left_img image{
  width:50rpx;
  height:50rpx;
}
.topList .info{
  margin-left:20rpx;
}
.topList .info>view:last-child>text:last-child{
  color:red;
  font-weight: lighter;
  font-size:12px;
  height:26rpx;
  margin-left:10rpx;
  margin-top:6rpx;
}
.info .info_title{
  font-size:16px;
}
.info .info_middle{
  font-size: 12px;
  font-weight:lighter;
}
.hr{
  display: flex;
  margin-top:20rpx;
}
.topList .info>view:last-child image{
  width:50rpx;
  height:50rpx;
  border-radius: 50%;
  margin-right:10rpx;
}
.topList view:last-child image{
  width:70rpx;
  height:70rpx;
}

.ttt{
  width:45rpx;
  height:45rpx;
  font-size:12px;
  background-color:#ddd;
  border-radius:50%;
  text-align: center;
  color:#fff;
  line-height: 40rpx;
}

